#!/usr/bin/env bash
#
# octocatthink
#
# Author: takuzoo3868
# Last Modified: 9 Feb 2026.
#

set -Eeuo pipefail
trap 'echo "[ERROR] ${BASH_SOURCE[0]}:${LINENO} aborted." >&2' ERR INT

if (($# == 0)); then
  read -r text
else
  text="$*"
fi

text_len=${#text}

printf '%s\n' "
           MMM.           .MMM
           MMMMMMMMMMMMMMMMMMM
           MMMMMMMMMMMMMMMMMMM      _$(printf '%*s' "$text_len" '' | tr ' ' '_')_
          MMMMMMMMMMMMMMMMMMMMM    | $(printf '%*s' "$text_len" '') |
         MMMMMMMMMMMMMMMMMMMMMMM   | $text |
        MMMMMMMMMMMMMMMMMMMMMMMM   |____$(printf '%*s' "$((text_len - 2))" '' | tr ' ' '_')|
        MMMM::- -:::::::- -::MMMM     O
         MM~:~ 00~:::::~ 00~:~MM    O
    .. MMMMM::.00:::+:::.00::MMMMM ..
          .MM::::: ._. :::::MM.
             MMMM;:::::;MMMM
      -MM        MMMMMMM
      ^  M+     MMMMMMMMM
          MMMMMMM MM MM MM
               MM MM MM MM
               MM MM MM MM
            .~~MM~MM~MM~MM~~.
         ~~~~MM:~MM~~~MM~:MM~~~~
        ~~~~~~==~==~~~==~==~~~~~~
         ~~~~~~==~==~==~==~~~~~~
             :~==~==~==~==~~
"
